{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["node", "vite/client"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx"
  },
  "include": ["server/**/*", "shared/**/*", "client/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
